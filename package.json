    "socket.io": "^3.0.4",
    "socket.io-client": "^3.0.5",
    "typescript": "^4.1.3",
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4",
    "vue-prism-editor": "^1.2.2",
    "vue-router": "^3.4.9",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.6.0",
    "wifi-name": "^3.1.1"
  }
