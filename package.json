  "main": "src/main.js",
  "scripts": {
    "start": "node build/main.js",
    "build": "tsc -p tsconfig.release.json && npm run copy",
    "copy": "copyfiles -u 2 src/server/{web,ssl}/**/* build/server/",
    "lint": "eslint . --ext .ts,.tsc --fix",
    "dev": "nodemon --watch 'src/**/*' --ignore 'src/**/*.spec.ts' --ignore 'src/server/web/**/*' --exec 'ts-node' src/main.ts",
    "dev:lint": "nodemon --watch 'src/**/*' --ignore 'src/**/*.spec.ts' --ignore 'src/server/web/**/*' --exec 'npm run lint && ts-node' src/main.ts"
  },
  "author": "Luftgut",
  "license": "ISC",
