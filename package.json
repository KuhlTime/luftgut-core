{
  "name": "luftgut-core",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsc --fix",
    "dev": "nodemon --watch 'src/**/*' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts",
    "dev:lint": "nodemon --watch 'src/**/*' --ignore 'src/**/*.spec.ts' --exec 'npm run lint && ts-node' src/main.ts"
  },
  "author": "Luftgut",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsutils": "^3.17.1",
    "typescript": "^4.1.3"
  }
}
