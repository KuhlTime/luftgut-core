    "@vue/component-compiler-utils": "^3.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "tsutils": "^3.17.1"
  },
  "dependencies": {
    "bme280": "^2.1.0",
    "colors": "^1.4.0",
